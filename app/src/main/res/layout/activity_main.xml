<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.RAPTfinal.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/a_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/a_main_toolitem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stations" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/a_main_toolitem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/a_main_toolitem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info" />
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/a_main_fragmentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/appBarLayout2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@id/appBarLayout2"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>